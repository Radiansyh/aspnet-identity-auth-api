            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@apiauth.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login as admin user (requires admin seeding enabled)"
          },
          "response": []
        },
        {
          "name": "Get All Users (Admin Only)",
          "request": {
